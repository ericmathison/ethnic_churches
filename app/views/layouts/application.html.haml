!!!
%html
  %head
    %title Ethnic LA
    = csrf_meta_tags
    = stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Passion+One', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag    '/chosen.min', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag '/chosen.jquery.min', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'ethnic_churches_form', 'data-turbolinks-track': 'reload'
  %body
    = link_to(root_path, class: 'logo-text') do
      %header
        = image_tag 'koreanbell.png', size: '300x164', class: 'logo-image'
        %p.logo Ethnic LA
        %p.subtitle
          %strong
            = 'An ethnographic research project locating ethnic'
            %br
            = 'groups in Los Angeles using ethnic church data'
    .row.justify-content-center
      .col-9
        - if notice
          %p#notice.alert.alert-success
            = notice
        - if alert
          %p#alert.alert.alert-danger
            = alert
    = yield
