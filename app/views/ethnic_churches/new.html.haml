.row.justify-content-center
  .jumbotron.col-9
    .col-2
      = form_for @ethnic_church do |f|
        = f.label :name
        = f.text_field :name
        = f.label :phone
        = f.text_field :phone
        = f.label :website
        = f.text_field :website
        = f.label :pastors_name
        = f.text_field :pastors_name
        = f.label :email
        = f.text_field :email
        = fields_for :language do |lang|
          = lang.label :language
          = lang.text_field :name
        = fields_for :country do |country|
          = country.label :country
          = country.text_field :name
        = fields_for :religious_background do |religious_background|
          = religious_background.label :persuasion
          = religious_background.text_field :persuasion
        = fields_for :address do |address|
          = address.label :street
          = address.text_field :street
          = address.label :city
          = address.text_field :city
          = address.label :zip
          = address.text_field :zip
        = fields_for :note do |note|
          = note.label :content
          = note.text_field :content
        = f.submit 'Create', id: 'create'
